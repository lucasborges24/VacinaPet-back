generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  fullName String
  Petz     Petz[]

  @@map("users")
}

model Petz {
  id        Int        @id @default(autoincrement())
  userId    Int
  name      String
  birthDate DateTime
  genre     Genre
  type      TypePetz
  user      Users      @relation(fields: [userId], references: [id])
  Vaccines  Vaccines[]

  @@unique([name, userId])
  @@map("petz")
}

model Vaccines {
  id             Int      @id @default(autoincrement())
  petId          Int
  name           String
  isDone         Boolean  @default(false)
  expirationDate DateTime
  pet            Petz     @relation(fields: [petId], references: [id])

  @@unique([name, petId])
  @@map("vaccines")
}

enum TypePetz {
  dog
  cat
}

enum Genre {
  male
  female
}
